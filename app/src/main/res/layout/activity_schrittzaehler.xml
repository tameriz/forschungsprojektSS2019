<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".activities.SchrittzaehlerActivity">

    <LinearLayout android:orientation="vertical" android:layout_width="409dp" android:layout_height="731dp" tools:layout_editor_absoluteY="2dp" tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="Schrittzaehler "
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F44336"
            />

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:progressTint="#3F51B5" />

        <TextView
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="Anzahl der Schritte:"
            android:textStyle="bold" />

        <Button
            android:id="@+id/schrittverlauf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ãœbersicht" />

        <Button
            android:id="@+id/laufStarten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start!" />
        <Button android:text="Synchronisieren" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/synchronisieren" />
        <Button android:text="Beenden" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/beenden" />

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET" />

        <Switch
            android:id="@+id/on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktiviere Sensor"
            android:textStyle="italic" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
