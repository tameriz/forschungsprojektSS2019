<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".activities.InfoActivity">

    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" tools:layout_editor_absoluteY="2dp" tools:layout_editor_absoluteX="1dp" android:background="#64DD17">

        <Space android:layout_width="match_parent" android:layout_height="20dp" />
        <ImageView android:src="@drawable/hslogo" android:layout_width="match_parent" android:layout_height="116dp" android:id="@+id/imageView2" />
        <TextView android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Schrittzähler Forschungsprojekt" android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="#000000" android:textStyle="bold" android:textSize="24sp" />
