        <TextView android:text="Information zu dieser App" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center" android:textSize="20sp" android:textStyle="bold" android:textColor="#000000" />

        <Space android:layout_width="match_parent" android:layout_height="19dp" android:background="#AA00FF" />
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="408dp" android:background="#64DD17" android:layout_marginEnd="40dp" android:layout_marginStart="40dp" >
            <TextView android:text="Forschungsprojekt SS 2019 \n\n Entwickler: \n Hackenberg Marius \n Ilgüz Tamer \n\n Betreuer:\nProf. Dr. Martine Herpers \n\n Aufgabe:\n Entwicklung einer Schrittzähler-App mit Anbindung an das RIGL-System." android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/message" android:textStyle="bold" android:textSize="18sp" android:textColor="#000000" android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
